<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.fidots.restaurant.ui.widget.AvatarView
        android:id="@+id/avatar_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/widget_dface"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_username"
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_date"
                android:text="2015-10-15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_environment_score"
                style="@style/option_item"
                android:text="环境：5.0"/>

            <TextView
                android:id="@+id/tv_dishes_score"
                style="@style/option_item"
                android:text="菜品：5.0"/>

            <TextView
                android:id="@+id/tv_service_score"
                style="@style/option_item"
                android:text="服务：5.0"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="嘻嘻嘻嘻嘻嘻"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_01"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:paddingRight="8dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_02"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:paddingRight="8dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_03"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:paddingRight="8dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/h_line"/>
</LinearLayout>