<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_picture_occupy"
        android:scaleType="fitXY"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:ellipsize="end"
            android:textColor="@color/app_theme_primary_textcolor"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/app_theme_secondary_textcolor"/>


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/app_theme_secondary_textcolor"/>

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edt_corner_border"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/appThemePrimary"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_comment_num"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/appThemePrimary"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

 <View style="@style/h_line"/>
</LinearLayout>