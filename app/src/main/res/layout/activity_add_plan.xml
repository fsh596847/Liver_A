<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View style="@style/h_line"
        android:layout_marginTop="25dp"/>

    <RelativeLayout
        android:id="@+id/rl_select_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_patient"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/arrow_right"
            android:textSize="16sp" />
    </RelativeLayout>

    <View style="@style/h_line"/>

    <View style="@style/h_line"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp">

        <RelativeLayout
            android:id="@+id/rl_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/start_date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text1"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/main_diagnose"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_main_diagnose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp" >

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/other_diagnose"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_other_diagnose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp" >

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/treat_method"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </RelativeLayout>

    </LinearLayout>

    <View style="@style/h_line"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_create"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/new_plan"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_selector"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="36dp" />

</LinearLayout>