<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_hot_merchant"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/test"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/ll_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_select_food_cata"
            style="@style/option_item"
            android:text="@string/food"
            android:drawableRight="@drawable/arrow_down"/>

        <View style="@style/v_line"/>

        <TextView
            android:id="@+id/tv_sort"
            style="@style/option_item"
            android:text="@string/sort"
            android:drawableRight="@drawable/arrow_down"/>

        <View style="@style/v_line"/>

        <TextView
            android:id="@+id/tv_address_switch"
            style="@style/option_item"
            android:text="@string/switch_address"
            android:drawableRight="@drawable/arrow_down"/>

    </LinearLayout>

    <View style="@style/h_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/fragment_recycler_view" />

        <View
            android:id="@+id/view_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88888888"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/fl_popup_menu"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>
    </FrameLayout>
</LinearLayout>