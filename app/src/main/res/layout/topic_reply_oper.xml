<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="42dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/tv_oper1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/view_padding"
            android:scaleType="centerInside"
            android:background="@null"
            android:src="@drawable/ic_action_favor_pressed"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/tv_oper2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/view_padding"
            android:scaleType="centerInside"
            android:background="@null"
            android:src="@drawable/ic_icon_author"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/tv_oper3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/view_padding"
            android:scaleType="centerInside"
            android:background="@null"
            android:src="@drawable/ic_action_write_pressed"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/tv_oper4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/view_padding"
            android:scaleType="centerInside"
            android:background="@null"
            android:src="@drawable/ic_action_repost_pressed"
            android:textColor="#ffffffff"
            android:gravity="center"/>
    </LinearLayout>

    <View style="@style/h_line"/>
</LinearLayout>