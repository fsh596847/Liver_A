<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- 餐馆图片 -->
        <ImageView
            android:id="@+id/img_restaurant"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/restaurant"
            android:scaleType="centerCrop"/>

        <!-- 本店特色 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/view_padding"
                android:text="本店特色"/>

            <FrameLayout
                android:id="@+id/fl_local_special"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
        </LinearLayout>

        <View
            style="@style/h_line"
            android:layout_marginTop="10dp" />

        <!-- 位置信息 -->
        <RelativeLayout
            android:id="@+id/rl_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/view_padding"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="16dp"
                android:text="安立路68号阳光广场1楼东侧"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <View style="@style/h_line" />

        <!-- 电话 -->
        <RelativeLayout
            android:id="@+id/rl_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/view_padding">

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="16dp"
                android:text="010-888888,88888080"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right"/>
        </RelativeLayout>

        <View style="@style/h_line" />
        <!-- 订座 收藏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_book"
                style="@style/option_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/phone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="订座"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_favorite"
                style="@style/option_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/favorite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="收藏"/>
            </LinearLayout>

        </LinearLayout>

            <View style="@style/h_line" />
        <!-- 菜品价格 包菜标准 包间情况 酒水价格 -->
        <FrameLayout
            android:id="@+id/fl_dishes_rooms_drinks"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <!-- 消费提示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/view_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费提示"/>

            <com.fidots.restaurant.ui.widget.ExpandedGridView
                android:id="@+id/gv_consume_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3">

            </com.fidots.restaurant.ui.widget.ExpandedGridView>

            <TextView
                android:id="@+id/tv_business_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="营业时间:09:30-18:30"/>
        </LinearLayout>
            <View style="@style/h_line" />
        <!-- 代金券 -->
        <LinearLayout
            android:id="@+id/ll_vouchers_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/view_padding">

            <TextView
                android:id="@+id/tv_vouchers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代金券"/>

            <com.fidots.restaurant.ui.widget.ExpandedGridView
                android:id="@+id/gv_vouches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="1"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp">

            </com.fidots.restaurant.ui.widget.ExpandedGridView>

        </LinearLayout>
            <View style="@style/h_line" />
        <!-- 网友点评 -->
        <LinearLayout
            android:id="@+id/ll_comment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/view_padding">

            <RelativeLayout
                android:id="@+id/rl_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_net_friend_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网友点评(88)"/>

                <TextView
                    android:id="@+id/tv_look_all_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="查看全部评论"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_comment_brief_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
            <View style="@style/h_line" />
        <!-- 一键投诉 写评论-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/view_padding">

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="首页"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="12sp"
                android:drawableTop="@drawable/widget_bar_news_nor"/>

            <TextView
                android:id="@+id/tv_compliant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="一键投诉"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="12sp"
                android:drawableTop="@drawable/compliant"/>

            <TextView
                android:id="@+id/tv_write_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="写评论"
                android:textColor="@drawable/tab_text_selector"
                android:drawableTop="@drawable/write_comment"
                android:textSize="12sp" />

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
