<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


	<include layout="@layout/toolbar" />

	<View
		style="@style/h_line"
		android:layout_marginTop="35dp"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:orientation="horizontal"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:background="@color/white">


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="手机号"
			android:id="@+id/textView25"
			android:layout_centerVertical="true"
			android:textSize="16sp" />

		<EditText
			android:id="@+id/edt_input_phone_number"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:drawablePadding="8dp"
			android:hint="@string/phone_number"
			android:singleLine="true"
			android:inputType="phone"
			android:textSize="16sp"
			android:textColor="@color/black"
			android:textCursorDrawable="@null"
			android:layout_toRightOf="@id/textView25"
			android:background="@null"
			android:layout_marginLeft="10dp" />

		<ImageView
			android:id="@+id/iv_clear_username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/clear"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:contentDescription="@null"
			android:visibility="gone" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btn_regain"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="获取验证码"/>

	</RelativeLayout>

	<View
		style="@style/h_line"
		android:layout_marginLeft="15dp"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:orientation="horizontal"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:background="@color/white">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/check_code"
			android:id="@+id/tv_verify_code"
			android:layout_centerVertical="true"
			android:textSize="16sp" />

		<EditText
			android:id="@+id/edt_input_verifycode"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:drawablePadding="8dp"
			android:hint="@string/check_code"
			android:singleLine="true"
			android:inputType="textPassword"
			android:textSize="16sp"
			android:textColor="@color/black"
			android:textCursorDrawable="@null"
			android:background="@null"
			android:layout_toRightOf="@id/tv_verify_code"
			android:layout_marginLeft="10dp" />

		<ImageView
			android:id="@+id/iv_clear_code"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/clear"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:contentDescription="@null"
			android:visibility="gone" />

	</RelativeLayout>
	<View
		style="@style/h_line" />

	<android.support.v7.widget.AppCompatButton
	    android:id="@+id/btn_next" 
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@color/appThemePrimary"
	    android:layout_gravity="center"
	    android:layout_marginTop="24dp"
	    android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
	    android:gravity="center"
	    android:text="@string/the_next_step"
	    android:textColor="@android:color/white"
	    android:textSize="16sp"/> 
</LinearLayout>
