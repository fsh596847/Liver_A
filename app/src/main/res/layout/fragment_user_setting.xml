<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appThemePrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="设置"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:text="IP"
            android:textColor="@android:color/white"/>
    </android.support.v7.widget.Toolbar>


    <View style="@style/h_line"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp">

        <RelativeLayout
            android:id="@+id/rl_change_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/change_password"
                android:textSize="14sp"
                android:textColor="@color/app_theme_primary_textcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right" />
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/message_no_disturb"
                android:textSize="14sp"
                android:textColor="@color/app_theme_primary_textcolor"
                android:layout_centerVertical="true"/>

            <ToggleButton
                android:id="@+id/toggle_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_selector"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:layout_alignParentRight="true"
                android:allowUndo="false"
                android:foreground="@null" />
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp" >

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/clear_history_message"
                android:textSize="14sp"
                android:textColor="@color/app_theme_primary_textcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text"
                android:textSize="16dp" />
        </RelativeLayout>

    </LinearLayout>
    <View style="@style/h_line"
        android:layout_marginTop="18dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/divider_color"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_contact_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/text0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/contact_service"
                android:textSize="14sp"
                android:textColor="@color/app_theme_primary_textcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/service_mobile"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/app_theme_primary_textcolor"
                android:drawableRight="@drawable/arrow_right" />
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp" >

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/feedback_suggestion"
                android:textSize="14sp"
                android:textColor="@color/app_theme_primary_textcolor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right"/>
        </RelativeLayout>

        <View
            style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp" >

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/about_us"
                android:textSize="14sp"
                android:textColor="@color/app_theme_primary_textcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right" />
        </RelativeLayout>

    </LinearLayout>
    <View style="@style/h_line" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/exit"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_selector"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>