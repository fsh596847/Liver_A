<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        android:hint="@string/change_mobile_tips"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"/>

    <View style="@style/h_line"/>

	<RelativeLayout
		android:layout_marginTop="20dp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal"
		android:paddingLeft="20dp"
		android:paddingRight="15dp"
		android:background="@color/white"
		android:gravity="center_vertical">

		<EditText
			android:id="@+id/edt_input_phone_number"
			android:layout_width="match_parent"
			android:layout_height="36dp"
			android:singleLine="true"
			android:inputType="phone"
			android:textSize="14sp"
			android:textColor="@color/black"
			android:background="@drawable/edit_text_border"/>

	</RelativeLayout>

	<View style="@style/h_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:background="@color/white"
		android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/get_message_vcode"
            android:id="@+id/tv_get_vcode"
            android:layout_centerVertical="true"
            android:textSize="14sp"
			android:textColor="@color/appThemePrimary"/>

        <EditText
            android:id="@+id/edt_input_v_code"
            android:layout_width="match_parent"
            android:layout_height="36dp"
			android:layout_toRightOf="@+id/tv_get_vcode"
            android:singleLine="true"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_border"
            android:layout_marginLeft="15dp" />

    </RelativeLayout>

    <View style="@style/h_line"/>

	<android.support.v7.widget.AppCompatButton
	    android:id="@+id/btn_commit"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@drawable/btn_selector"
	    android:layout_gravity="center"
	    android:layout_marginTop="24dp"
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"
	    android:gravity="center"
	    android:text="提交"
	    android:textColor="@android:color/white"
	    android:textSize="16sp"/> 
</LinearLayout>
