<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>
    <View
        style="@style/h_line"
        android:layout_marginTop="35dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edt_input_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawablePadding="8dp"
            android:hint="@string/patient_name"
            android:singleLine="true"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/iv_clear_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:visibility="gone" />

    </RelativeLayout>
    <View
        style="@style/h_line"
        android:layout_marginLeft="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edt_input_phone_number"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawablePadding="8dp"
            android:hint="@string/phone_number"
            android:singleLine="true"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/iv_clear_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:visibility="gone" />

    </RelativeLayout>
    <View
        style="@style/h_line"
        android:layout_marginLeft="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edt_input_id_num"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawablePadding="8dp"
            android:hint="@string/id_number"
            android:singleLine="true"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/iv_clear_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:visibility="gone" />

    </RelativeLayout>
    <View style="@style/h_line" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_invite"
        android:background="@drawable/btn_selector"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/send_invite_code"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/white"/>
</LinearLayout>