<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_option_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical" >

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_food"
            style="@style/option_item" >

            <ImageView
                style="@style/option_img"
                android:src="@drawable/quick_option_album_nor" />

            <TextView
                style="@style/option_item_text"
                android:text="餐饮美食" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hotel"
            style="@style/option_item" >

            <ImageView
                style="@style/option_img"
                android:src="@drawable/quick_option_album_nor" />

            <TextView
                style="@style/option_item_text"
                android:text="宾馆酒店" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_travel_ticket"
            style="@style/option_item" >

            <ImageView
                style="@style/option_img"
                android:src="@drawable/quick_option_album_nor" />

            <TextView
                style="@style/option_item_text"
                android:text="旅游票务" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_entertainment"
            style="@style/option_item" >

            <ImageView
                style="@style/option_img"
                android:src="@drawable/quick_option_album_nor" />

            <TextView
                style="@style/option_item_text"
                android:text="休闲娱乐" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_public_service"
            style="@style/option_item" >

            <ImageView
                style="@style/option_img"
                android:src="@drawable/quick_option_album_nor" />

            <TextView
                style="@style/option_item_text"
                android:text="公共事业" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_house_service"
            style="@style/option_item" >

            <ImageView
                style="@style/option_img"
                android:src="@drawable/quick_option_album_nor" />

            <TextView
                style="@style/option_item_text"
                android:text="家政服务" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_auto_repair"
            style="@style/option_item">

            <ImageView
                style="@style/option_img"
                android:src="@drawable/quick_option_album_nor" />

            <TextView
                style="@style/option_item_text"
                android:text="汽车修理" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_favorite"
            style="@style/option_item" >

            <ImageView
                style="@style/option_img"
                android:src="@drawable/quick_option_album_nor" />

            <TextView
                style="@style/option_item_text"
                android:text="我的收藏" />
        </LinearLayout>

        <LinearLayout
            style="@style/option_item" >

            <ImageView
                style="@style/option_img" />

            <TextView
                style="@style/option_item_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>