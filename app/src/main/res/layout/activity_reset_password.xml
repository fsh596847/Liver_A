<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    android:orientation="vertical" >

    <include layout="@layout/toolbar"/>

    <View
        style="@style/h_line"
        android:layout_marginTop="35dp"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:orientation="horizontal"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:background="@color/white">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/password"
			android:id="@+id/tv_new_password"
			android:layout_centerVertical="true"
			android:textSize="16sp" />

		<EditText
			android:id="@+id/edt_input_new_password"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:drawablePadding="8dp"
			android:hint="@string/password"
			android:singleLine="true"
			android:inputType="textPassword"
			android:textSize="16sp"
			android:textColor="@color/black"
			android:textCursorDrawable="@null"
			android:background="@null"
			android:layout_toRightOf="@id/tv_new_password"
			android:layout_marginLeft="10dp" />

		<ImageView
			android:id="@+id/iv_clear_new_password1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/clear"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:contentDescription="@null"
			android:visibility="gone" />

	</RelativeLayout>
	<View
		style="@style/h_line" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:orientation="horizontal"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:background="@color/white">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/password"
			android:id="@+id/tv_password"
			android:layout_centerVertical="true"
			android:textSize="16sp" />

		<EditText
			android:id="@+id/edt_input_new_password2"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:drawablePadding="8dp"
			android:hint="@string/password"
			android:singleLine="true"
			android:inputType="textPassword"
			android:textSize="16sp"
			android:textColor="@color/black"
			android:textCursorDrawable="@null"
			android:background="@null"
			android:layout_toRightOf="@id/tv_password"
			android:layout_marginLeft="10dp" />

		<ImageView
			android:id="@+id/iv_clear_new_password2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/clear"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:contentDescription="@null"
			android:visibility="gone" />

	</RelativeLayout>
	<View
		style="@style/h_line" />
	
    <android.support.v7.widget.AppCompatButton 
		    android:id="@+id/btn_next"
		    android:background="@drawable/btn_small_white_selector"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:layout_gravity="center"
		    android:layout_margin="16dp"
		    android:gravity="center"
		    android:text="@string/the_next_step"
		    android:textSize="16sp"
		    android:textColor="@color/green"/>
</LinearLayout>
